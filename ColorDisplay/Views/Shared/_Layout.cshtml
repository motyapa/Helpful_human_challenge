<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ColorDisplay</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link href='https://fonts.googleapis.com/css?family=Source Serif Pro' rel='stylesheet'>
</head>
<body>
    <header>
        <img src="~/Logo/logo-symbol.svg" / class="responsive">
    </header>
    <div class="main">
        <div class="sidebar">
            <button type="button" class="btn btn-light" onclick="loadDetails(-1, -1, -1)">Random</button>
            <a href="#">Red</a>
            <a href="#">Orange</a>
            <a href="#">Yellow</a>
            <a href="#">Green</a>
            <a href="#">Blue</a>
            <a href="#">Purple</a>
            <a href="#">Brown</a>
            <a href="#">Gray</a>
            
        </div>

        <div class="mainContainer">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

<style>
    body {
        font-family: 'Source Serif Pro';
        font-size: 1vw;
        background-color: lightgray;
        height: 100%;
        
    }

    .main {
        width: 100%;       
    }

    header {
        height: 5vh;
        background-color:darkslategray;
    }

    .mainContainer {
        padding-top: 2vh;
        padding-left: 15%;
        text-align: center;
    }

    .sidebar button {
        width: 75%;
        margin: auto;
        margin-left: 12.5%;
        margin-bottom: 10%;
        margin-top: 10%;
        border: 2px solid black;
    }

    .sidebar {
        margin: 0;
        padding: 0;
        width: 15%;
        background-color: gray;
        position: fixed;
        height: 100%;
        overflow: auto;
    }

    .sidebar a {
        display: block;
        color: black;
        padding: 16px;
    }
 
    .sidebar a.active {
        background-color: #04AA6D;
        color: white;
    }

    .sidebar a:hover:not(.active) {
        background-color: #555;
        color: white;
    }

    .sidebar a:hover {
        cursor:pointer;
    }

    .responsive {
        height: auto;
        width: 100%;
    }
</style>
